<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_width="200dp"
    android:layout_height="303dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="283dp"
        android:elevation="4dp"
        app:cardElevation="4dp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_top"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:contentDescription="@string/todo" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_image"
                android:layout_marginTop="109dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="18dp" />
            <TextView
                android:layout_marginTop="37dp"
                android:id="@+id/text_info"
                android:layout_below="@+id/image_top"
                android:layout_width="86dp"
                android:layout_height="19dp"
                android:textSize="8sp"
                android:layout_marginStart="18dp"
                tools:ignore="SmallSp" />
            <TextView
                android:textColor="@color/orange"
                android:textSize="8sp"
                android:id="@+id/seller_name"
                android:layout_below="@+id/text_info"
                android:layout_width="38dp"
                android:layout_height="10dp"
                android:layout_marginStart="18dp"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/short_desc"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/seller_name"
                android:layout_width="145dp"
                android:layout_height="46dp"
                android:textSize="8sp"
                android:layout_marginStart="18dp"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/read_more"
                android:textColor="#403E3E"
                android:textSize="8sp"
                android:text="@string/read_more"
                android:layout_below="@+id/short_desc"
                android:layout_width="47dp"
                android:layout_height="11dp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="18dp"
                app:drawableRightCompat="@drawable/drop_down"
                tools:ignore="SmallSp"
                app:drawableEndCompat="@drawable/drop_down" />

            <ImageView
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_eye"
                android:layout_marginBottom="11dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/eye"
                android:layout_width="10.34dp"
                android:layout_height="8dp"
                android:layout_marginStart="106.88dp" />
            <ImageView
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_like"
                android:layout_alignTop="@+id/eye"
                android:id="@+id/like"
                android:layout_width="6.95dp"
                android:layout_height="8dp"
                android:layout_toEndOf="@+id/eye"
                android:layout_marginStart="7.76dp" />
            <ImageView
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_comment"
                android:layout_alignTop="@+id/eye"
                android:id="@+id/comment"
                android:layout_width="9.27dp"
                android:layout_height="8dp"
                android:layout_marginStart="7.76dp"
                android:layout_toEndOf="@+id/like" />
            <ImageView
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/ic_share"
                android:layout_alignTop="@id/eye"
                android:id="@+id/share"
                android:layout_width="5.15dp"
                android:layout_height="8dp"
                android:layout_marginStart="7.76dp"
                android:layout_toEndOf="@+id/comment" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>